{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": [
        "esnext",
        "dom"
      ],
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "strict": true,
      "sourceMap": true,
      "outDir": "./build",
      "skipLibCheck": true
    },
    "exclude": [
      "node_modules",
      "build"
    ]
  }